<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>This is campgrounds page!</h1>
        <p>View our hand-picked campgrounds from all over</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new campground</a>
        </p>
       </div>
    </header>

<div class="row">
    <div class="col-lg-12">
        <h3>Most popular campgrounds</h3>
    </div>
</div>
<div class="row" style="display:flex; flex-wrap:wrap;">
<% campgrounds.forEach(function(c){ %>
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
            <img src="<%= c.image %>">
            <div class="caption">
                <h4><%= c.name %></h4>
            </div>
            <p>
                <a href="/campgrounds/<%= c._id %>" class="btn btn-primary">More Info</a>
            </p>
        </div>
    </div>
<% }); %>
</div>
</div>

<% include ../partials/footer %>