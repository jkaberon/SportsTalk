<% include ../partials/header %>
<h1>Show Template</h1>

<p><%= campground.name %></p>

<img src="<%= campground.image %>">

<p><%= campground.description %></p>
<p><em>Submitted By <%= campground.author.username %></em></p>

<% if(req.user && req.user.username==campground.author.username){ %>
    <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
<form class="delete-form" action="/campgrounds/<%= campground._id%>?_method=DELETE" method="POST">
    <button class="btn btn-danger">Delete</button>
</form>
<% } %>

<p>
    <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add new comment</a>
</p>

<% campground.comments.forEach(function(comment){ %>
    <p>
       <strong> <%= comment.author.username %> </strong> - <%= comment.text %>
    </p>
    <% if(req.user && req.user.username==comment.author.username){ %>
    <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Edit</a>
    
    <form class="delete-form" action="/campgrounds/<%= campground._id %>/<%= comment._id %>?_method=DELETE" method="POST">
        <input type="submit" class="btn btn-xs btn-danger" value="delete">  
    </form>
    <% } %>
<% }) %>

<% include ../partials/footer %>